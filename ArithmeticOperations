// calculator.test.js

const calculator = new Calculator();

test('should correctly add two numbers', () => {
  calculator.addChar('5');
  calculator.addChar('+');
  calculator.addChar('3');
  calculator.calculate();
  expect(calculator.resultElement.textContent).toBe('8');
});

test('should correctly subtract two numbers', () => {
  calculator.addChar('9');
  calculator.addChar('-');
  calculator.addChar('3');
  calculator.calculate();
  expect(calculator.resultElement.textContent).toBe('6');
});

test('should correctly multiply two numbers', () => {
  calculator.addChar('6');
  calculator.addChar('ร');
  calculator.addChar('3');
  calculator.calculate();
  expect(calculator.resultElement.textContent).toBe('18');
});

test('should correctly divide two numbers', () => {
  calculator.addChar('9');
  calculator.addChar('รท');
  calculator.addChar('3');
  calculator.calculate();
  expect(calculator.resultElement.textContent).toBe('3');
});

